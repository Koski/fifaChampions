
<div class = "col-md-3">


<h1>Listing players</h1>

  <table class= "table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= link_to player.name, player %></td>
          <td><%= link_to '', player, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-trash" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Player', new_player_path, class: "btn btn-primary" %>
</div>