<h1>Statistics</h1>


<div class = "row">
	
	<div class = "col-md-3">

		<h4>Most wins</h4>
		<%= render 'top5_table', users: @winners, state:'Wins', method: :number_of_wins %>

	</div>

	
	<div class = "col-md-3">

		<h4>Most Losses</h4>
		<%= render 'top5_table', users: @losers, state:'Losses', method: :number_of_losses %>

	</div>

	<div class = "col-md-3">
		<h4>Most active users</h4>
		<%= render 'top5_table', users: @users_by_played, state: 'Played', method: :number_of_tournaments %>
	</div>

</div>
<div class = "row">

	<div class = "col-md-3">
		<h4>Best win ratio</h4>
		<%= render 'top5_table', users: @winners_by_ratio, state: 'Win Ratio', method: :win_ratio, percentage: true %>
	</div>

	<div class = "col-md-3">
		<h4>Best point ratio</h4>
		<%= render 'top5_table', users: @users_by_point_ratio, state: 'Point Ratio', method: :point_ratio, percentage: true %>
	</div>

</div>

<div class = "row">
	<div class = "col-md-12">
		Most recent winner (Undisputed Champion): 
	<%unless @recent_winner.nil? %>
		<%= link_to @recent_winner.username, @recent_winner %>
	<%end%>
	</div>
</div>
