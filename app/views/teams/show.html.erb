<p id="notice"><%= notice %></p>

<h2><%= @team.name %></h2>
<div class = "row">
	<div class = "col-md-2">
		<table class= "table table-hover">
			<thead>
				<tr>
					<th>#</th>
					<th>Name</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<% @team.players.each do |p| %>
					<td><%= p.number %></td>
					<td><%= p.name %></td>
					<% end %>
				</tr>
			</tbody>
		</table>
	</div>
</div>
<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>
