<div class = "col-md-3">

  <h1>Teams</h1>

  <table class= "table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= link_to team.name, team %></td>
          <td><%= link_to '', edit_team_path(team), class: "glyphicon glyphicon-pencil" %></td>
          <td><%= link_to '', team, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-trash" %> 
        </tr>
      <% end %>
    </tbody>
  </table>
 
    <%= link_to 'New Team', new_team_path, class: 'btn btn-primary' %>

  
</div>

